    "definitions": {
        "request.BulkMarkAttendanceRequest": {
            "type": "object",
            "required": [
                "user_ids"
            ],
            "properties": {
                "user_ids": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "request.CreateEventRequest": {
            "type": "object",
            "required": [
                "category",
                "description",
                "end_date",
                "event_type",
                "max_participants",
                "registration_deadline",
                "start_date",
                "status",
                "title"
            ],
            "properties": {
                "category": {
                    "type": "string",
                    "enum": [
                        "seminar",
                        "workshop",
                        "lomba",
                        "konser"
                    ]
                },
                "description": {
                    "type": "string"
                },
                "end_date": {
                    "type": "string"
                },
                "event_type": {
                    "type": "string",
                    "enum": [
                        "online",
                        "offline"
                    ]
                },
                "is_uii_only": {
                    "type": "boolean"
                },
                "location": {
                    "type": "string"
                },
                "max_participants": {
                    "type": "integer",
                    "minimum": 1
                },
                "registration_deadline": {
                    "type": "string"
                },
                "start_date": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "draft",
                        "published"
                    ]
                },
                "title": {
                    "type": "string"
